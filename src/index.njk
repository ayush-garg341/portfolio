---
layout: base.njk
section: home
---
<div class="home-page">

  {# Hero #}
  <div class="hero">
    <div class="hero__col">
      <h1 class="hero__title gradient-text">{{ home.title }}</h1>
      {% if home.body %}
        <div class="hero__body">{{ home.body | markdown | safe }}</div>
      {% endif %}
    </div>
    <div class="hero__col">
      {% image
        home.image,
        home.image_alt,
        "(min-width: 1024px) 50vw, 100vw",
        "hero__image shadow",
        "eager"
      %}
    </div>
    <div>
    <div class="hero__body">Connect with me on:</div>
      <a class="btn btn--outline btn--sm" href="https://github.com/ayush-garg341" target="_blank">Github</a>
      <a class="btn btn--outline btn--sm" href="https://www.linkedin.com/in/ayush-garg-5bb04114b/" target="_blank">LinkedIn</a>
      <a class="btn btn--outline btn--sm" href="https://x.com/bbetterengineer" target="_blank">X (Twitter)</a>
    </div>
  </div>

  {# Projects #}
  <div class="list-header">
    <h2 class="list-header__title">Projects</h2>
    <a class="btn btn--outline btn--sm" href="/portfolio/projects">View All</a>
  </div>
  {% from "macros/projectlist.njk" import projectlist %}
  {{ projectlist(projects = collections.project | reverse) }}

  {# Articles #}
  <div class="list-header">
    <h2 class="list-header__title">Articles</h2>
    <a class="btn btn--outline btn--sm" href="/portfolio/blog">View All</a>
  </div>
  {% from "macros/articlelist.njk" import articlelist %}
  {{ articlelist(
    articles = collections.post | reverse,
    show_tags = false,
    limit = 3
  ) }}
</div>
